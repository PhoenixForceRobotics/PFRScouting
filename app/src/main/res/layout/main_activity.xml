<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:visibility="visible"
    tools:context="edu.phoenixforce.scouting.mobile.layouts.ActivityMain">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="126dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="77dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/button_use"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nasalization_rg"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginEnd="1102dp"
        android:layout_marginRight="1102dp"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:text="@string/by"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nasalization_rg"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="1278dp"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:background="#00FFFFFF"
        app:srcCompat="@mipmap/picture2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/ifrlogo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="9dp"
        android:text="@string/VersionStatus"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nasalization_rg"/>

    <Button
        android:id="@+id/rickroll"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/nasalization_rg"
        android:text="@string/VerisonNumber"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/options"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="931dp"
        android:layout_marginRight="931dp"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/nasalization_rg"
        android:text="Settings"
        android:textColor="#FFFFFF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="185dp"
        android:layout_marginRight="185dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@mipmap/picture2" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="344dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="564dp"
        android:layout_marginRight="564dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:text="TextView"
        android:fontFamily="@font/nasalization_rg"/>

    <Button
        android:id="@+id/testBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:fontFamily="@font/nasalization_rg"/>


</RelativeLayout>
