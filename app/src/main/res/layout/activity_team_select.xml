<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:visibility="visible"
    tools:context="edu.phoenixforce.scouting.mobile.layouts.team_select">\


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="554dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="53dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"
        app:srcCompat="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/matchNum"
        android:layout_width="1001dp"
        android:layout_height="80dp"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="266dp"
        android:background="#AC1626"
        android:fontFamily="@font/nasalization_rg"
        android:hint="Match Number"
        android:inputType="number"
        android:maxLength="3"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/teams"
        android:layout_width="1001dp"
        android:layout_height="80dp"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="175dp"
        android:background="#AC1626"
        android:fontFamily="@font/nasalization_rg"
        android:hint="Team Number"
        android:inputType="number"
        android:maxLength="4"
        android:spinnerMode="dropdown"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="1001dp"
        android:layout_height="80dp"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="361dp"
        android:background="#00000000"
        android:fontFamily="@font/nasalization_rg"
        android:gravity="center"
        android:text="Match Info"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goScout"
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="239dp"
        android:layout_marginRight="239dp"
        android:layout_marginBottom="84dp"
        android:background="#DDB625"
        android:fontFamily="@font/nasalization_rg"
        android:text="Start Scouting!"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="213dp"
        android:layout_height="137dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="533dp"
        android:layout_marginRight="533dp"
        android:layout_marginBottom="450dp"
        app:srcCompat="@mipmap/picture2" />


</RelativeLayout>
